<%= render "layouts/header-registration"%>
            <h2>ReadOn Log in here !</h2>
            <%= notice %>
            <%= alert %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <p>
                    <%= f.label :login,'Username or Email' %>
                        <br />
                        <%= f.text_field :login,:class=>"form-control" %>
                </p>
                <P>
                    <%= f.label :password %>
                        <br />
                        <%= f.password_field :password, autocomplete: "off",:class=>"form-control"  %>
                </P>
                <% if devise_mapping.rememberable? -%>
                    <p>
                        <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                    </p>
                    <% end -%>
                        <p>
                            <%= f.submit "Log in",:class=>"form-control btn btn-primary"  %>
                        </p>
                        <% end %>
                            <%= render "readonusers/shared/links" %>
<%= render "layouts/footer-registration"%>